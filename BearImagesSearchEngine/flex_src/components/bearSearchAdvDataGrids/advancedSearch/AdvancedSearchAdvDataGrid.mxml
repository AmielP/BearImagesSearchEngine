									   xmlns:mx="library://ns.adobe.com/flex/mx"
									   xmlns:custom="components.bearSearchAdvDataGrids.advancedSearch.*"
									   designViewDataType="flat" rowHeight="200" height="100%" width="100%"
									   allowMultipleSelection="true" fontFamily="Verdana"
									   wordWrap="true" editable="true" resizableColumns="false">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<custom:groupedColumns>
		<mx:AdvancedDataGridColumn dataField="name" headerText="Description" width="200" editable="true"/>
		<mx:AdvancedDataGridColumn dataField="contentUrl" headerText="Bear Image" width="900" editable="false">
			<mx:itemRenderer>
				<fx:Component>
					<mx:HBox height="30" width="30" horizontalAlign="center">
						<s:Image height="100%" width="100%" source="{data.contentUrl}"/>
					</mx:HBox>
				</fx:Component>
			</mx:itemRenderer>
		</mx:AdvancedDataGridColumn>
		<mx:AdvancedDataGridColumn dataField="contentUrl" headerText="URL" width="200" editable="true"/>
	</custom:groupedColumns>
</custom:AdvancedSearchAdvDataGridClass>
